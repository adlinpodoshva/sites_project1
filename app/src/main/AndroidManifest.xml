<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.misha.sitesproject">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.misha.sitesproject.sites_activities.ReviewActivity"></activity>
        <activity
            android:name="com.misha.sitesproject.sites_activities.FavouriteSitesDisplayActivity"
            android:label="מועדפים" />

        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="${applicationId}.fileprovider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_paths" />
        </provider>

        <activity android:name="com.misha.sitesproject.sites_activities.SiteDisplayActivity" />
        <activity android:name="com.misha.sitesproject.area_activities.CityDisplayActivity" />
        <activity android:name="com.misha.sitesproject.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.misha.sitesproject.authentication_activities.SignupActivity"
            android:label="הרשמה" />
        <activity
            android:name="com.misha.sitesproject.authentication_activities.SigninActivity"
            android:label="התחברות" />
        <activity
            android:name="com.misha.sitesproject.area_activities.AreaSelectionActivity"
            android:label="בחירת אזור" />
        <activity
            android:name="com.misha.sitesproject.area_activities.AreaDisplayActivity"
            android:label="בחירת עיר" />
    </application>

</manifest>